@page
@model Hotel_Management_System.Pages.guestsModel
@{
}

<div class="text-center">
    <h1>@Model.dt.Rows.Count</h1>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Guest ID</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">City Code</th>
                <th scope="col">Country Code</th>
                <th scope="col">Street Number</th>
                <th scope="col">Email</th>
                <th scope="col"># not showing up</th>
                <th scope="col">SSN</th>
                <th scope="col">Operations</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.dt.Rows.Count; i++)
            {
                <tr>
                    <th scope="row">@(i + 1)</th>
                    @for (int j = 1; j < Model.dt.Columns.Count; j++)
                    {
                        <td>@Model.dt.Rows[i][j]</td>
                    }
                    <td>
                        <a class="btn btn-danger" asp-page="/Delete" asp-page-handler="Delete" asp-route-i="@(i+1)"> Delete </a>
                        <a class="btn btn-warning" asp-page="/Update" asp-page-handler="Update" asp-route-i="@(i+1)"> Update </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>